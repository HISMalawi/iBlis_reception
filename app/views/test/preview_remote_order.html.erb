<style>
    body{
        -moz-user-select: none;
    }
    .content{
        width: 100%;
        height: 100%;
        margin-top: 0px;
        padding-top: 0px;
    }
    .footer {
        bottom: 2px;
        height: 100px;
        position: fixed;
        width: 100%;
        background-color: #333333;
        display: block;
        height: 80px;
        padding-right: 20px;
    }

    .btn-home {
        background-image: linear-gradient(to bottom, #5cb85c 0px, #5cb85c 100%);
