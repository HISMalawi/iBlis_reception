

        <%= javascript_include_tag "jquery" %>
        <%= javascript_include_tag "bootstrap" %>
        <%= javascript_include_tag "modal" %>
        <%= stylesheet_link_tag "bootstrap" %>

    <style>

    .content{
        width: 100%;
        height: 100%;
        margin-top: 0px;
        padding-top: 0px;
    }
    .footer {
      bottom: 2px;
      height: 100px;
      position: fixed;
      width: 100%;
      background-color: #333333;
      display: block;
      height: 80px;
      padding-right: 20px;
    }

    .btn-home {
      background-image: linear-gradient(to bottom, #5cb85c 0px, #5cb85c 100%);
      background-repeat: repeat-x;
      border-color: #5cb85c;
      margin-top: 10px;
      margin-left: 10px;
      min-width: 140px;
      float: left;
      -moz-user-select: none;
      border: 0 none;
      color: white;
      cursor: pointer;
      font-weight: bold;
      font-size: 1.4em;
      height: 80%;
    }

    .view, .view-striped {
        font-size: 1.18em;
        opacity: 0.95;
        padding: 6px;
    }
    .view-striped:hover,.view:hover {
        background-color: #F5F5F5;
    }
    .view-striped {
        background-color: #F9F9F9;
    }
    .view td, .view-striped td{
        height: 20px;
        max-height: 20px;
    }
    .btn-header{
        font-size: 1.1em;;
        font-weight: bold;
    }

    </style>

        <script>

        function newTest() {

            document.location = "/test/new?patient_id=<%= @patient.id%>";

        }

    </script>
    <div class="content">
      <div class="panel-primary header header">

        </div>
      <div class="panel-info header header">
        <div class="panel-heading">
          <table class="table" style="margin:0px;padding:0px;border: none;">
            <tr class="row">
                <td style="width: 80%;padding: 0px;margin: 0px;border: none;">
                  <h3><strong>Patient Details</strong></h3>
                </td>
              <td style="padding-left: 0px;border: none;">
              <a style="width: 130px" class="btn btn-lg btn-primary btn-header" href="/tests/all/?patient_id=<%=@patient.id%>">
                      View Orders
                    </a>
              </td>
              <td style="padding-left: 10px;border: none;">
                <a style="width: 130px" class="btn btn-lg btn-primary btn-header" href="/people/edit?patient_id=<%=@patient.id%>">
                  Edit
                </a>
              </td>

              <td style="padding-left: 10px; border: none;">

              <a style="width: 130px" class="btn btn-lg btn-primary btn-header"
                       href="/test/new?patient_id=<%=@patient.id%>">
                      New Test
                    </a>
              </td>
            </tr>
          </table>

        </div>
      </div>

      <div class="panel-body">
        <div class="display-details">
          <table class="table" style="width:100%">
            <tr  class="view">
                <td>
                  <p><strong>Patient Name</strong></p>
                </td>
              <td>
                <p ><%= @patient.name%></p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p ><strong>Patient No</strong></p>
              </td>
              <td>
                <p ><%= @patient.patient_number%></p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p ><strong>External Patient No.</strong></p>
              </td>
              <td>
                <p ><%= @patient.external_patient_number%></p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p ><strong>Date of Birth</strong></p>
              </td>
              <td>
                <p ><%= @patient.dob.to_date.strftime("%d-%m-%Y") rescue 'N/A' %>&nbsp;</p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p><strong>Sex</strong></p>
              </td>
              <td>
                <p ><%= (@patient.gender==0? "Male" : "Female") %>&nbsp;</p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p><strong>Physical Address</strong></p>
              </td>
              <td>
                <p> <%= @patient.address %>&nbsp;</p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view">
              <td>
                <p><strong>Phone Number</strong></p>
              </td>
              <td>
                <p ><%= @patient.phone_number %>&nbsp;</p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
            <tr class="view-striped">
              <td>
                <p><strong>Date Created</strong></p>
              </td>
              <td>
                <p > <%= @patient.created_at.to_time.strftime("%d-%m-%Y  &nbsp;&nbsp; %H:%M:%S").html_safe %></p>
              </td>
              <td style="width: 50%;">
                &nbsp;
              </td>
            </tr>
          </table>
        </div>
      </div>
</div>

    <div class="footer">
      <button class="btn-home btn btl-lg btn-success" onmousedown="document.location='/'">|< Back Home</button>
    </div>


